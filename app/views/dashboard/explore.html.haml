- provide :content do
  .row
    .span10
      - if @featured_cubes
        .page-header{:style => 'width: 770px;'}
          %h1
            = 'Featured Cubes'
        .clearfix
          %ul.cubes.items
            - @featured_cubes.each do |cube|
              = render :partial => '/cubes/cubecard', :locals => {:cube => cube}

      .page-header{:style => 'width: 770px;'}
        %h2
          = 'Cubes'
          .right
            = link_to 'Create cube', new_cube_path, :class => 'btn btn-primary'

      .clearfix
        %ul.cubes.items
          - @cubes.each do |cube|
            = render :partial => '/cubes/cubecard', :locals => {:cube => cube}
      = paginate @cubes

    .span2
      .page-header
        %h3 
          = 'Explore'
      %ul.items
        %li
          %h4
            = link_to 'All', explore_topic_path('all')
          %hr.slim
        %li
          %h4
            = link_to 'Latest', explore_topic_path('latest')
          %hr.slim          
                    
      .page-header
        %h3
          = 'Topics'
      %ul.items
        - Topic.all.each do |topic|
          %li
            %h4
              = link_to topic.name, explore_topic_path(topic)
            %hr.slim    