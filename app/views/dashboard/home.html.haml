- provide :content do
  - if user_signed_in?    
    = render 'dashboard'

  - else

    .row{:style => 'padding-top: 30px'}
      .span8{:style => 'height: 440px; background: url("../assets/BG_CUBE.png"); background-repeat: no-repeat'}
        .clearfix{:style => 'margin-top: 125px'}
          = image_tag 'complete_logo.png'
        .clearfix{:style => 'margin-top: 90px'}
          = link_to 'Start Cubing with Facebook', user_omniauth_authorize_path(:facebook), :class => 'btn btn-large btn-primary core right'
        .clearfix{:style => 'margin-top: 5px'}
          = link_to "or sign up with email", new_user_registration_path, :class => 'minor right'

      .span4
        .info.core{:style => 'margin: 100px 0px 0px 15px; padding-left: 30px; border-left: 1px; border-top: 0px; border-right: 0px; border-bottom: 0px; border-color #6699CC !important; border-style: solid; width: 220px; min-height: 100px; font-size: 18px; color: #999'}
          %p.big-text{:style => 'padding-bottom: 10px;'}
            = 'Everyday we have countless thoughts about little and big things that go on around us'
          %p.big-text{:style => 'padding-bottom: 10px;'}
            = 'Criticube helps you collect, share, and discuss your ideas and thoughts'
          %p.big-text
            = 'Put your thoughts in personalized cubes and share, collaborate with others'                        