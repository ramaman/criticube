- provide :content do

  .row
    .span4.well
      .page-header
        %h3 Your account is almost ready!

      = simple_form_for @user, :as => resource_name, :url => omniauth_user_registration_path, :html => {:class => 'form-vertical'}, :validate => true do |f|
        = devise_error_messages!
        = f.hidden_field :first_name
        = f.hidden_field :last_name
        .control-group
          = f.fields_for :vanity do |v|
            = v.label 'page_name', :class => 'control-label core'
            .controls{:style => "margin-bottom: 18px"}
              .input-prepend
                %span.add-on.span3{:style => "width: 116px"}
                  = 'http://criticube.com/'
                = v.text_field :name, :class => 'prependedInput', :style => "width: 164px", :data => {:validate => true}
              .help-block.minor
                = "3 to 24 characters, cannot contain special characters"  
        .control-group
          = f.label 'Email', :class => 'control-label core'
          .controls
            = f.email_field :email, :class => 'span4'
        .control-group
          = f.label :password, :class => 'control-label core'
          .controls
            = f.password_field :password, :class => 'span4'
            .help-block.minor
              = "8 to 64 characters"              
        .control-group
          = f.label :password_confirmation, :class => 'control-label core'
          .controls
            = f.password_field :password_confirmation, :class => 'span4'
        %br/      
        .control-group
          = f.submit "Create account", :class => ['btn', 'btn-large', 'btn-success', 'core']
