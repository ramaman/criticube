!!!
%html
  %head
    %title 
      = title
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'shared/header'
    .container
      - if notice
        .alert.alert-info
          %button.close{:type => 'button', 'data-dismiss' => 'alert'} &times;
          = notice
      - if alert
        .alert.alert-error
          %button.close{:type => 'button', 'data-dismiss' => 'alert'} &times;
          = alert
      = yield :content
